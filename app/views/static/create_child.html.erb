<div class="container">
	<div class="col l8 m10 s12">
	<div class="card">
		<div class="card-image waves-effect waves-block waves-light">
			<%= image_tag("blank_profile.png", class: "activator", height: "400", width: "450") %>
        </div>
        <div class="card-content">
          <span class="card-title activator grey-text text-darken-4">New Child<i class="mdi-navigation-more-vert right"></i></span>
        </div>
        <div class="card-reveal">
          <span class="card-title grey-text text-darken-4">New Child <i class="mdi-navigation-close right"></i></span>
        
		<form class="col 12" action="#">
			<div class="row">
				<div class="input-field col l6 m6 s12">
					<i class="mdi-action-account-circle prefix"></i>
	        		<input id="icon_prefix" type="text" class="validate">
	        		<label for="icon_prefix">First Name</label>
				</div>
				<div class="input-field col l6 m6 s12">
					<i class="mdi-action-account-circle prefix"></i>
	        		<input id="icon_prefix" type="text" class="validate">
	        		<label for="icon_prefix">Last Name</label>
				</div>
			</div>
			<div class="row">
				<div class="col l4 m6 s12">
					<label>Parent/Guardian</label>
  					<select>
					    <option value="" disabled selected>Choose child's guardian</option>
					    <option value="1">John Smith</option>
					    <option value="2">Ashley Jenkins</option>
					    <option value="3">Rupert Rails</option>
					</select>
				</div>
				<div class="col l4 m6 s12 offset-l2">
					<label>School</label>
  					<select>
					    <option value="" disabled selected>Choose child's school</option>
					    <option value="1">Gateway</option>
					    <option value="2">Woodland Hills<option>
					    <option value="3">Bethal Park</option>
					</select>
				</div>
				<div class="col l4 m6 s12 offset-l2">
				</div>
			<div>
			<div class="row">
				<div class="input-field col l4 m6 ">
					<input type="date" class="datepicker">
					<label>Date of Birth</label>
				</div>
				<div class="input-field col l6 m6 s8 offset-l2">
					<p class="range-field">
						Grade:
	    				<input type="range" id="grade" min="0" max="12" />
	  				</p>
	  			</div>
			</div>
			<div class="row">
				<div class="col l4 offset-l2">
					<div class="switch">
				    <label>
				      Active
				      <input type="checkbox">
				      <span class="lever"></span>
				      Inactive
				    </label>
					</div>
				</div>
				<div class="col l4 offset-l2">
					  <button class="btn waves-effect waves-light" type="submit" name="action">Submit
					    <i class="mdi-content-send right"></i>
					  </button>
				</div>
			</div>
		</form>
		</div>
    </div>
	</div>
</div>

<script> $('.datepicker').pickadate();</script>
<script> $(document).ready(function() {
    $('select').material_select();
  });
</script>