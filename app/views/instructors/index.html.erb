<div class="container">
  <h1>Instructors</h1>

  <table>
    <thead>
      <tr>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Programs</th>
        <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <% @instructors.each do |instructor| %>
        <tr>
          <td><%= instructor.first_name %></td>
          <td><%= instructor.last_name %></td>
          <td></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>
  <% if can? :create, Instructor %>
    <%= link_to 'New Instructor', new_instructor_path %>
  <% end %>
</div>
