<h1 class="header center black-text">Create new Instructor</h1>
<% if @instructor.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@instructor.errors.count, "error") %> prohibited this instructor from being saved:</h2>

      <ul>
      <% @instructor.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
<% end %>
<%= form_for(@instructor, :url=>{:action=>"create"}, html: {class: "col s12"}) do |f| %>
	<div class="row center">
		<div class="input-field col s12">
	        <%= f.text_field :first_name%>
	        <label for="icon_prefix">First Name</label>
		</div>
		<div class="input-field col s12">
	    	<%= f.text_field :last_name %>
	    	<label for="icon_prefix">Last Name</label>
		</div>
		<%= f.fields_for :users do |user| %>
			<div class="input-field col s12">
				<%= user.text_field :username %>
	        	<label for="icon_prefix">Username</label>
			</div>
			<div class="input-field col s12">
				<%= user.password_field :password %>
	        	<label for="icon_prefix">Password</label>
			</div>
			<div class="input-field col s12">
				<%= user.password_field :password_confirmation %>
	        	<label for="icon_prefix">Password Confirmation</label>
			</div>
			<div class="input-field col s12">
				<%= user.text_field :role %>
	        	<label for="icon_prefix">Role</label>
			</div>
		<button class="btn waves-effect waves-light" type="submit" name="action">Submit
			<i class="mdi-content-send right"></i>
		</button>
	</div>
	<% end %>

<% end %>