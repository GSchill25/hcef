  
<div class="row">
  <div class="col-lg-3">
  </div>
  <div class="col-lg-6">
  	<div class="panel-heading">
    	<h3 class="panel-title">Instructor Sign Up</h3>
  	</div>
  	<div class="panel-body">
  	  <div class="well well-lg">
    	<%= nested_form_for(@instructor, :url=>{:action=>"create"}, html: {class: ""}) do |f| %>
	    	<% if @instructor.errors.any? %>
			    <div id="error_explanation">
			      <h2><%= pluralize(@instructor.errors.count, "error") %> prohibited this instructor from being saved:</h2>

			      <ul>
			      <% @instructor.errors.full_messages.each do |msg| %>
			        <li><%= msg %></li>
			      <% end %>
			      </ul>
			    </div>
			<% end %>
    		<div class="row">
				<div class="col-lg-6 col-md-6 col-sm-12">
					<label>First Name</label><%= mark_required(@instructor, :first_name) %>
					<%= f.text_field :first_name %>
				</div>
				<div class="col-lg-6 col-md-6 col-sm-12">
			   		<label>Last Name</label><%= mark_required(@instructor, :last_name) %>
	        		<%= f.text_field :last_name %>
	        	</div>
	        </div>	
	    	</br></br>
			<%= f.fields_for :user do |users| %>
				<%= render :partial => "user_form", :locals => { :f => users } %>
			<% end %>
			<p>
				<h6> Assign Instructor to Location </h6>
                  <% for location in Location.all %>
                    <%= check_box_tag "instructor[location_ids][]", location.id, @instructor.locations.include?(location), {id: location.id} %>
                    <label for="<%= location.id %>"><%= location.name %></label>
                    <br />
                  <% end %>
			</p>
			<button class="" type="submit" name="action">Submit
			</button>
		<% end %>
	  </div>
    </div>
  </div>
</div>
<div class="col-lg-3">
</div>



