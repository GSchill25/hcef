<div class="row">
  <div class="col-lg-3">
  </div>
  <div class="col-lg-6">
    <div class="panel-heading">
      <h3>School</h3>
    </div>
    <div class="panel-body">
      <div class="well well-lg">

        <%= form_for(@school) do |f| %>
        <div class="row">
          <div class="col-lg-6 col-md-6 col-sm-12">
            <label>Name</label><%= mark_required(@school, :name) %></br>
            <%= f.text_field :name %>
          </div>
          <div class="col-lg-6 col-md-6 col-sm-12">
            <%= f.label :school_district_id %></br>
            <%= f.select :school_district_id, options_for_select(SchoolDistrict.all.map{|s| [s.name, [s.id]]}), :prompt => "Select District" %>
          </div>
        </div></br></br>

        <%= f.submit %>
        <% end %>
      </div>
    </div>
  </div>
</div>
