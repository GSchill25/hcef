		<%= form_for(@child, :url=>{:controller=>"children", :action=>"create"}, html: {class: "col s12"}) do |f| %>
			<div class="row">
				<div class="input-field col l6 m6 s12">
					<i class="mdi-action-account-circle prefix"></i>
	        		<%= f.text_field :first_name, html: {id: "icon_prefix"} %>
	        		<label for="icon_prefix">First Name</label>
				</div>
				<div class="input-field col l6 m6 s12">
					<i class="mdi-action-account-circle prefix"></i>
	        		<%= f.text_field :last_name, html: {id: "icon_prefix"} %>
	        		<label for="icon_prefix">Last Name</label>
				</div>
			</div>

			<div class="row">
				<div class="field col l4 m6 s12">
					<label>Parent/Guardian</label>
  					<%= f.collection_select :guardian_id, Guardian.all, :id, :name %>
  					<!-- Add date of birth to this select as well -->
				</div>
				<div class="field col l6 m6 s12 offset-l2">
					<%= f.label :school_id %></br>
  					<%= f.collection_select :school_id, School.all, :id, :name %>
				</div>
				<div class="col l2 m6 s12">
				</div>
			</div>
			<div class="row">
				<div class='input-field col l4 m6 s12'>
			      <%= f.label :date_of_birth %></br>
				  <%= f.date_select(:date_of_birth, :start_year => 1900) %>
								
			    </div>
				
				<div class="col l6 m6 s8 offset-l2">
					<div class="input-field">
						<%= f.label :grade %>
						<%= f.number_field :grade %></br></br>
					</div>

					<p>
						  <% for loc in @locations %>
						    <%= check_box_tag "child[location_ids][]", loc.id, @child.locations.include?(loc), {id: loc.id} %>
						    <label for="<%= loc.id %>"><%= loc.name %></label>
			           		<br />
						  <% end  %>
					</p>
				</div>
			</div>
			<div class="row">

					<div class="field col l5 m6 s8">
						<p> </p>
					</div>

				</br></br>
					<div class="field col l3 m2 s5 offset-l1">
						<%#= f.label :active %>
							<%= f.check_box :active %>
						    <%= f.label :active %>

					</div>
					<div class="col l3 m4 s5">
						<%= f.submit "Create", html: {class: "btn waves-effect waves-light"} %>
					</div>
			</div>
		<% end %>
