        <div class="card-reveal">
          <div class="row">
    			<div class="col s9">
		        	<ul class="tabs">
		        		<li class="tab col s3"><a href="#child" class="active">Add Child</a></li>
		        		<li class="tab col s3"><a href="#guardian">Add Guardian</a></li>
		        		<li class="tab col s3"><a href="#school">Add School</a></li>
		      		</ul>
		      	</div>
          	<!--span class="card-title grey-text text-darken-4">New Child <i class="mdi-navigation-close right"></i></span-->
          	<div id="child" class="col s12">
          		<%= render :partial => "child_form" %>
          	</div>

          	<div id="guardian" class="col s12">
            	<%= render :partial => "guardian_form" %>
            </div>

            <div id="school" class="col s12">
          		<%= render :partial => "school_form" %>
          	</div>
        

		  </div>
		</div>
    </div>
	</div>
</div>

