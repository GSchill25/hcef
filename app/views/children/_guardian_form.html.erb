					<%= form_for(@guardian, :url=>{:controller=>"guardians", :action=>"create"}, html: {class: ""}) do |f| %>
				        		<%= f.text_field :first_name, html: {id: "icon_prefix"} %>
				        		<label for="icon_prefix">First Name</label>
				        		<%= f.text_field :last_name, html: {id: "icon_prefix"} %>
				        		<label for="icon_prefix">Last Name</label>
						        <%= f.text_field :phone, html: {id: "icon_telephone"} %> 
						        <label for="icon_telephone">Telephone</label>
						        <%= f.text_field :email %>
						        <label for="email">Email</label>
								<%= f.label :date_of_birth %></br>
								<%= f.date_select(:date_of_birth, :start_year => 1900) %>
								
								<p>
									<% for loc in @locs %>
										<%= radio_button_tag "guardian[location_ids][]", loc.id + 10000, @guardian.locations.include?(loc), {id: loc.id + 10000 } %>
										<label for="<%= loc.id + 10000 %>"><%= loc.name %></label>
							           	<br />
									<% end  %>
								</p>
								<%= f.submit "Create", html: {class: ""} %>
					<% end %>
