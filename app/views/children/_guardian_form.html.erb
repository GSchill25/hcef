					<%= form_for(@guardian, :url=>{:controller=>"guardians", :action=>"create"}) do |f| %>

							<div class="row">
								<div class="col-lg-6 col-md-6 col-sm-12">
									<label >First Name</label>
					        		<%= f.text_field :first_name %>
					        	</div>
	        					<div class="col-lg-6 col-md-6 col-sm-12">
				        			<label>Last Name</label>
				        			<%= f.text_field :last_name %>
				        		</div>
				        	</div></br></br>
				        	<div class="row">
								<div class="col-lg-6 col-md-6 col-sm-12">
				        		<label>Telephone</label>
						        <%= f.text_field :phone %> 
						        </div>
	        					<div class="col-lg-6 col-md-6 col-sm-12">
						        	<label for="email">Email</label>
						        	<%= f.text_field :email %>
						        </div>
				        	</div></br></br>
						    <div class="row">
								<div class="col-lg-6 col-md-6 col-sm-12">  
									<%= f.label :date_of_birth %></br>
									<%= f.date_select(:date_of_birth, :start_year => 1900) %>
								</div>
	        					<div class="col-lg-6 col-md-6 col-sm-12">
									<p>
										<% for loc in @locs %>
											<%= radio_button_tag "guardian[location_ids][]", loc.id + 10000, @guardian.locations.include?(loc), {id: loc.id + 10000 } %>
											<label for="<%= loc.id + 10000 %>"><%= loc.name %></label>
								           	<br />
										<% end  %>
									</p>
								</div>
				        	</div></br></br>
								<%= f.submit "Create", html: {class: ""} %>
					<% end %>
