					<%= form_for(@guardian, :url=>{:controller=>"guardians", :action=>"create"}, html: {class: "col s12"}) do |f| %>
						<div class="row">
							<div class="input-field col l6 m6 s12">
								<i class="mdi-action-account-circle prefix"></i>
				        		<%= f.text_field :first_name, html: {id: "icon_prefix"} %>
				        		<label for="icon_prefix">First Name</label>
							</div>
							<div class="input-field col l6 m6 s12">
								<i class="mdi-action-account-circle prefix"></i>
				        		<%= f.text_field :last_name, html: {id: "icon_prefix"} %>
				        		<label for="icon_prefix">Last Name</label>
							</div>
						</div>
						<div class="row">
							<div class="input-field col s6">
						        <i class="mdi-communication-phone prefix"></i>
						        <%= f.text_field :phone, html: {id: "icon_telephone"} %> 
						        <label for="icon_telephone">Telephone</label>
						    </div>
						    <div class="input-field col s6">
						        <%= f.text_field :email %>
						        <label for="email">Email</label>
						    </div>
						</div>
						<div class="row">
							<div class="input-field col s6">
								<%= f.label :date_of_birth %></br>
								<%= f.date_select(:date_of_birth, :start_year => 1900) %>
								
							</div>
							<div class="field">
								<p>
									<% for loc in @locs %>
										<%= radio_button_tag "guardian[location_ids][]", loc.id + 10000, @guardian.locations.include?(loc), {id: loc.id + 10000 } %>
										<label for="<%= loc.id + 10000 %>"><%= loc.name %></label>
							           	<br />
									<% end  %>
								</p>
							</div>
							<div class="col s3 offset-s3">
								<%= f.submit "Create", html: {class: "btn waves-effect waves-light"} %>
							</div>
						</div>
					<% end %>
