<div class="row">
  <div class="col-lg-3">
  </div>
  <div class="col-lg-6">
    <div class="panel-heading">
      <h3>SubLocation</h3>
    </div>
    <div class="panel-body">
      <div class="well well-lg">

        <%= form_for(@sub_location, validate: true) do |f| %>
        <% if @sub_location.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@sub_location.errors.count, "error") %> prohibited this location from being saved:</h2>

          <ul>
            <% @sub_location.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
        <% end %>

        <%= f.label :name %><%= mark_required(@sub_location, :name) %></br>
        <%= f.text_field :name %></br></br>
        <label>Parent Location</label><br />
        <%= f.collection_select :location_id, Location.all, :id, :name, :prompt => "Select Location" %>
        <br /><br /><br />
        <%= f.submit %>
        <% end %>

      </div>
    </div>
  </div>
</div>
