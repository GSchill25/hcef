<p id="notice"><%= notice %></p>

<div class="container">
  <div class="row">
    <div class="col l12 m12 s12">
      <table>
      <tr>
        <thead>
          <th>
            Name
          </th>
          <th>
            Program type
          </th>
          <th>
            Start date
          </th>
          <th>
            End date
          </th>
          <th>
            Attendance
          </th>
          <th>
            Location
          </th>
        </thead>
      </tr>
      <tr>
        <td><%= @program.name %></td>
        <td><%= @program.program_type == "after_school" ? "After School" : @program.program_type == "enrichment" ? "Enrichment" : "Field Trip" %></td>
        <td><%= @program.start_date %></td>
        <td><%= @program.end_date %></td>
        <td><%= @program.children.count %></td>
        <td><%= @program.location.nil? ? "None" : @program.location == "" ? "None" : @program.location.name %></td>
      </tr>
      </table>
    </div>
    </br></br>
    <div id="days">
        <%= render :partial => "days" %>

        <ul>
          <li>Day 3/14/2015</li>
          <li>Day 3/15/2015</li>
          <li>Day 3/16/2015</li>
        </ul>
    </div>
      <%= link_to 'New Day', new_after_school_path(program_id: @program.id) %>
    <div class="col l6 m8 s12">
      </br></br></br></br>
      <u><h6>Children Present</h6></u>
      <ol>
        <% @program.children.each do |child| %>
          <li><%= child.name %></li>
        <% end %>
      </ol>
    </div> 

  </div>
  </br></br>
  <%= link_to 'Edit', edit_program_path(@program) %> |
</div>
