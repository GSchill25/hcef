<div class="table-responsive">
  <table class="table table-striped">
    <tr>
      <thead>
        <th>
          Date
        </th>
        <th>
          Day of Week
        </th>
        <th>
          Students Present
        </th>
        <th>
          View Day
        </th>

      </thead>
    </tr>
    <% if false and !@dates.nil? # Skip this section %>
      <% @dates.each do |d| %>
        <tr>
          <td><%= d[0] %></td>
          <td><%= d[0].strftime("%A") %></td>
          <td><%= d[1] %></td>
          <td>
            <button type="button" class="btn btn-default">
              <a href=<%= "/program/#{@program.id}/#{d[0]}"%>>Show Day<a>
            </button>
          </td>
        </tr>
      <% end %>
    <% end %>

    <% unless @days.blank? %>
      <% @days.each do |date,after_school_objects| %>
        <tr>
          <td><%= date %></td>
          <td><%= date.try(:strftime, "%A") %></td>
          <td><%= after_school_objects.count %></td>
          <td>
            <%= link_to "Edit", edit_after_school_path(after_school_objects.first),
              class: "btn btn-default" %>
            <%= link_to "Show Day", program_show_day_path(id: @program.try(:id), date: date.to_s(:iso_8601)),
              class: "btn btn-default" %>
          </td>
        </tr>
      <% end %>
    <% end %>
  </table>
    <% if false and !@dates.nil? # Skip this section %>
      <%= will_paginate @dates, :param_name => 'dates_page' %>
    <% end %>
</div>
