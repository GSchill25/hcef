<div class="container">
  <h1>Programs This Year</h1>

  <table>
    <thead>
      <tr>
        <th>Name</th>
        <th>Program type</th>
        <th>Start date</th>
        <th>End date</th>
        <!--th>Location</th-->
        <th>Total Attendance</th>
        <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <% @programs.each do |program| %>
        <tr>
          <td><%= link_to program.name, program_path(program) %></td>
          <td><%= program.program_type %></td>
          <td><%= program.start_date %></td>
          <td><%= program.end_date %></td>
          <!--td><%= program.location_id %></td-->
          <td><%= program.children.count %></td>
          <td><%= link_to 'Show', program %></td>
          <td><%= link_to 'Edit', edit_program_path(program) %></td>
          <td><%= link_to 'Destroy', program, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Program', new_program_path %>
</div>