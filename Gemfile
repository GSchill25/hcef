source 'https://rubygems.org'

# Bundle edge Rails instead: gem 'rails', github: 'rails/rails'
gem 'rails', '4.0.12'

# Use sqlite3 as the database for Active Record
gem 'sqlite3', :group => [:development, :test]

# Use SCSS for stylesheets
gem 'sass-rails', '~> 4.0.2'

# Use Uglifier as compressor for JavaScript assets
gem 'uglifier', '>= 1.3.0'

#search box
gem 'ransack'

#export to excel
gem 'axlsx'

# See https://github.com/sstephenson/execjs#readme for more supported runtimes
# gem 'therubyracer', platforms: :ruby # We are now using nodejs instead

# Use jquery as the JavaScript library
gem 'jquery-rails'

# Use jquery UI
gem 'jquery-ui-rails'

# Turbolinks makes following links in your web application faster. Read more: https://github.com/rails/turbolinks
gem 'turbolinks'

# Build JSON APIs with ease. Read more: https://github.com/rails/jbuilder
gem 'jbuilder', '~> 1.2'

# For date and time validations
gem 'validates_timeliness', '~> 3.0'

# Nested forms
gem "nested_form"

# Population of sample data
gem 'populator'
gem 'faker'

#Permissions Gem for different users
gem 'cancancan'

#charts
gem 'chartkick'

#pagination
gem 'will_paginate', '~> 3.0.6'

# For database and asset backups
gem 'dump'

group :doc do
  # bundle exec rake doc:rails generates the API under doc/api.
  gem 'sdoc', require: false
end

# Gems used only in testing
group :test do
  gem 'shoulda'
  gem 'shoulda-matchers'
  gem 'factory_girl_rails'
  gem 'mocha', require: false
  gem 'simplecov'
  gem 'turn'
  gem 'single_test'
  gem 'cucumber-rails', require: false
  gem 'database_cleaner'
  gem 'launchy'
  gem 'capybara'
end

group :production do
  gem 'rails_12factor'
  #gem 'pg' # We are now using MySQL instead of postgreSQL
end

# Use ActiveModel has_secure_password
gem 'bcrypt', '~> 3.1.7'

# Use unicorn as the app server
# gem 'unicorn'

# Use Capistrano for deployment
# gem 'capistrano', group: :development

# Use debugger
# gem 'debugger', group: [:development, :test]
